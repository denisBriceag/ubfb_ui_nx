{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ubfb-ui-workspace/ubfb-common-ui": ["libs/ubfb-common-ui/src/index.ts"],
      "@ubfb-ui-workspace/ubfb-login": ["libs/ubfb-login/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
